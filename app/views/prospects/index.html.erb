<div class="m-5 p-3"> 
  <div class="pb-4 align-items-center"> 
    <h2> Nuevos Prospectos </h2>
    <i class="fa-solid fa-plus"></i> <%= link_to 'Nuevo prospecto', new_prospect_path, class: "links btn btn-nuevo" %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th class="head-table-title" scope="col">Email</th>
        <th class="head-table-title" scope="col">Nombres</th>
        <th class="head-table-title" scope="col">Celular</th>
        <th class="head-table-title" scope="col">Estado</th>
        <th class="head-table-title" scope="col">Opciones</th>
        <th class="head-table-title" scope="col">Fecha de registro</th>

      </tr>
    </thead>

    <tbody>
      <% @prospects.each do |prospect| %>
      <tr>
          <td class="py-3"> <%= prospect.email %> </td>
          <td class="py-3"> <%= prospect.name %>
          <%= prospect.lastname %></td>
          <td class="py-3"> <%= prospect.cellphone %></td>
          <td class="py-3"> <%= prospect.status.status %> </td>
          <td class="py-3"> <%= link_to 'ver', prospect_path(prospect), class: "links fa-regular fa-eye" %>
           <i class="fa-regular fa-pen-to-square"></i><%= link_to 'editar', edit_prospect_path(prospect), class: "links fa-regular fa-pen-to-square"%> 
          </td>
          <td> <%=prospect.created_at%></td>
      </tr>
      <% end %>
    </tbody>
  </table>




</div>
